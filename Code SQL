SELECT nom,lieu FROM Mines;
SELECT * FROM Mineurs WHERE prenom LIKE 'Sylv%';
SELECT nom FROM Minerais WHERE prix>30;
SELECT prenom,nom,age FROM Mineurs WHERE anciennete>15;
SELECT mine.Nom FROM mine WHERE Département = 'Puy-de-Dôme';
SELECT Nom_minerai FROM minerai;
SELECT Nom_minerai FROM minerai WHERE prix_Kilo > 100;
SELECT * FROM mineur WHERE age => 50 and ann_exp < 8;
